<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" styleClass="vbox" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainMenuController">
	<children>
      <Label text="Welcome to the Logic IPuzzle">
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin></Label>
      <GridPane fx:id="gridPane">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
      		<Label fx:id="numberOfRows" styleClass="label" text="Select the number of rows:" />
            	<ComboBox fx:id="columnsSelector" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label styleClass="label" text="Select the number of columns:" GridPane.rowIndex="1" />
            <ComboBox fx:id="rowsSelector" prefWidth="150.0" GridPane.columnIndex="1" />
         </children>
      </GridPane>
		<Button fx:id="startGameButton" mnemonicParsing="false" onAction="#startGame" styleClass="button" text="Start Game">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin></Button>
	</children>
</VBox>
